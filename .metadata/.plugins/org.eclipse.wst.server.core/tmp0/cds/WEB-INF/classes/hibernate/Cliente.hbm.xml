<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.com.templateit.cds.web.entity.Cliente" table="cliente">
        <id name="id" type="java.lang.Long">
            <column name="ID" />
            <generator class="identity" />
        </id>

		<property name="apellido" type="string">
            <column name="APELLIDO" length="50" not-null="true" />
        </property>
        <property name="nombres" type="string">
            <column name="NOMBRES" length="60" not-null="true" />
        </property>
        <property name="direccion" type="string">
            <column name="DIRECCION" length="120" not-null="true" />
        </property>
        <property name="telefono" type="string">
            <column name="TELEFONO" length="20" not-null="true" />
        </property>
        <property name="celular" type="string">
            <column name="CELULAR" length="20" not-null="true" />
        </property>
    </class>
</hibernate-mapping>

