<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.com.templateit.cds.web.entity.Ajuste" table="ajuste">
        <id name="id" type="java.lang.Long">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <property name="fechaAjuste" type="timestamp">
            <column name="FECHA_AJUSTE" />
        </property>
         <property name="codigo" type="java.lang.Long">
            <column name="CODIGO" />
        </property>
        <property name="nombre" type="string">
            <column name="NOMBRE" length="45" not-null="true" />
        </property>
        <property name="descripcion" type="string">
            <column name="DESCRIPCION" length="100" not-null="true" />
        </property>
        <property name="marca" type="string">
            <column name="MARCA" length="30" not-null="true" />
        </property>
        <property name="cantidadSinAjuste" type="java.lang.Integer">
            <column name="CANTIDAD_SIN_AJUSTE" />
        </property>
        <property name="cantidadConAjuste" type="java.lang.Integer">
            <column name="CANTIDAD_CON_AJUSTE" />
        </property>
        <many-to-one name="motivoAjuste" class="ar.com.templateit.cds.web.entity.MotivoAjuste" fetch="join" cascade="none">
        	<column name="ID_MOTIVOAJUSTE" />
        </many-to-one>
        <many-to-one name="usuario" class="ar.com.templateit.cds.web.entity.Usuario" fetch="join" cascade="none">
        	<column name="ID_USUARIO" />
        </many-to-one>
        <property name="fraccionable" type="boolean">
            <column name="FRACCIONABLE" sql-type="tinyint" not-null="false" />
        </property>
        <property name="pesoConAjuste" type="java.math.BigDecimal">
            <column name="PESOCONAJUSTE" />
        </property>
        <property name="pesoSinAjuste" type="java.math.BigDecimal">
            <column name="PESOSINAJUSTE" />
        </property>
	    
         
    </class>
</hibernate-mapping>

